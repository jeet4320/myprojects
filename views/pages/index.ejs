<html>
  <head>
    <title>Simple login</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

    <script>
      $(document).ready(function(){
        var user,pass;
        $("#submit").click(function(){
          user=$("#user").val();
          pass=$("#password").val();
          $.post("https://webdatacse5335jeet.herokuapp.com/login",{user: user,password: pass}, function(data){
            //alert(data);
            $('#containerdiv').show();
            var serverdata = $("#serverdata");
                    serverdata.empty();


                    $.each(data, function(key, info) {
                        var row = $("<tr></tr>");

                        //alert(key);
                        //alert(info);
                        //alert(JSON.stringify(user));

                        var name = $("<td>"+info.name+"</td>");
                        var name = $("<td>"+info.phone+"</td>");
                        var name = $("<td>"+info.DOB+"</td>");
                        var name = $("<td>"+info.company+"</td>");
                        var name = $("<td>"+info.jobtype+"</td>");
                        var name = $("<td>"+info.school+"</td>");
                        var name = $("<td>"+info.gpa+"</td>");
                        var name = $("<td>"+info.researchinterests+"</td>");
                        var name = $("<td>"+info.degree+"</td>");
                        var name = $("<td>"+info.major+"</td>");
                        var name = $("<td>"+info.gender+"</td>");
                        var name = $("<td>"+info.nationality+"</td>");
                        var name = $("<td>"+info.address+"</td>");
                        var name = $("<td>"+info.longitude+"</td>");
                        var name = $("<td>"+info.latitude+"</td>");

                        name.appendTo(row);


                        row.appendTo(serverdata);

                    });



          });
        });
      });
    </script>
  </head>
  <body>
  <nav class="navbar navbar-default navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
        <a class="navbar-brand bold center">Web Data Management Class !!!</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav navbar-right">
                <li class="active"><a href="/">Home</a></li>
            </ul>

        </div><!--/.nav-collapse -->
    </div>
</nav>
  <button type="button" class="btn btn-primary" id="submit" style="margin-top: 70px;margin-left:50px;">Get JSON data from Server</button>


<div class="container" id="containerdiv" hidden="true" style="margin-top: 50px;">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Data received from Server:</h3>
        </div>

        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Phone</th>
                    <th>DOB</th>
                    <th>Company</th>
                    <th>Job-type</th>
                    <th>School</th>
                    <th>GPA</th>
                    <th>Research interests</th>
                    <th>Degree</th>
                    <th>Major</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>Longitude</th>
                    <th>Latitude</th>
                </tr>
                </thead>
                <tbody id="serverdata">

                </tbody>
            </table>
        </div>
    </div>
</div>

    <h1>Hello people !</h1>
    <input type="TEXT" id="user" size="40"><br>
    <input type="password" id="password" size="40"><br>

  </body>
</html>
